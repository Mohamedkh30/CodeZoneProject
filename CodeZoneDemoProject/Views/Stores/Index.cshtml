@{
    var title = "Stores";
}
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between">
                                <h3 class="content-header-title">@title</h3>
                                <a class='mr-1 mb-1 btn btn-dark' href="/Stores/create">create</a>
                            </div>

                        </div>
                        <div class="card-body">
                            <table class="table Stagedt table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <td>Name</td>
                                        <td>Address</td>
                                        <td>Actions</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var store in ViewBag.Stores)
                                    {
                                        <tr>
                                            <td>@store.Name</td>
                                            <td>@store.Address</td>
                                            <td>
                                                <a class='mr-1 mb-1 btn btn-primary' href="/Stores/edit/@store.Id.ToString()">edit</a>
                                                <a class='mr-1 mb-1 btn btn-danger' id="@store.Id.ToString()" onclick="Delete(this)">delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        let Delete = function (obj) {
            let Id = $(obj).attr("id")
            if (confirm('Are you sure you want to delete?')) {
                $.ajax({
                    url: `/Stores/Delete/${Id}`,
                    dataType: 'json',
                    contentType: "application/json",
                    type: "Get",
                    success: function (response) {
                        alert('Deleted Successfully');
                    },
                    error: function (err) {
                        console.log(err)
                        alert("Can't delete");
                    }
                });
            }

        }
    </script>
}
