@model CodeZoneProject.Application.Stores.Commands.Update.UpdateStoreCommand
@{
    var title = "Update Store";
}
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <section id="file-export">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="heading-elements">
                                    <h3 class="content-header-title">@title</h3>
                                </div>
                            </div>
                            <div class="card-body">
                                <form asp-action="Edit" method="post">
                                    <div class="row">
                                        <input asp-for="Id" hidden type="text" class="form-control">

                                        <div class="form-group col-6">
                                            <label class="control-label">Name</label>
                                            <input asp-for="Name" type="text" class="form-control">
                                            <span asp-validation-for="Name" class="text-danger">test</span>
                                        </div>
                                        <div class="form-group col-6">
                                            <label class="control-label">Address</label>
                                            <input asp-for="Address" type="text" class="form-control">
                                            <span asp-validation-for="Address" class="text-danger">test</span>
                                        </div>
                                    </div>
                                    <div class="form-group col-6 mt-3">
                                        <button class="btn btn-primary">
                                            Save
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

