@{
    var title = "Items";
}
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between">
                                <h3 class="content-header-title">@title</h3>
                                <a class='mr-1 mb-1 btn btn-dark' href="/items/create">create</a>
                            </div>

                        </div>
                        <div class="card-body">
                            <table class="table Stagedt table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <td>Name</td>
                                        <td>Category</td>
                                        <td>Actions</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in ViewBag.Items)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Category</td>
                                            <td>
                                                <a class='mr-1 mb-1 btn btn-primary' href="/items/edit/@item.Id.ToString()">edit</a>
                                                <a class='mr-1 mb-1 btn btn-danger' id="@item.Id.ToString()" onclick="Delete(this)">delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        let Delete = function (obj) {
            let Id = $(obj).attr("id")
            if(confirm('Are you sure you want to delete?')){
                $.ajax({
                    url: `/Items/Delete/${Id}`,
                    dataType: 'json',
                    contentType: "application/json",
                    type: "Get",
                    success: function (response) {
                        alert('Deleted Successfully');
                    },
                    error: function () {
                        alert("Can't delete");
                    }
                });
            }

        }
    </script>
}
