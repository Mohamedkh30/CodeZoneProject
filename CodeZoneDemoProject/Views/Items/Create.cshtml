@model CodeZoneProject.Application.Items.Commands.Create.CreateItemCommand
@{
    var title = "Create Item";
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <section id="file-export">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="heading-elements">
                                    <h3 class="content-header-title">@title</h3>
                                </div>
                            </div>
                            <div class="card-body">
                                <form asp-action="Create">
                                    <div class="row">
                                        <div class="form-group col-6">
                                            <label class="control-label">Name</label>
                                            <input asp-for="Name" required type="text" class="form-control">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-6">
                                            <label class="control-label">Category</label>
                                            <select asp-for="Category" asp-items="ViewBag.Categories" type="text" class="form-control"></select>
                                            <span asp-validation-for="Category" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group col-6 mt-3">
                                        <button class="btn btn-primary">
                                            Save
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
